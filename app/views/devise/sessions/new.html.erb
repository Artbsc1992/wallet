<%= render 'shared/login_nav' %>
<div class="flex flex-col">
  <div class="w-full">
    <%= form_for resource, as: resource_name, url: session_path(resource_name), html:{class: "bg-gray-200 w-screen"} do |f| %>
      <div class="mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-3 shadow border-none appearance-none w-full py-5 px-5 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', id: "username", placeholder: "email" %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", class:"shadow border-none appearance-none  w-full py-5 px-5 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", id:"password", type:"password", placeholder:"password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'ring-offset-0' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>