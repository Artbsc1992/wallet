<h1>Group page</h1>
<% if @groups == nil %>
  <h2>You have no groups yet</h2>
<% else %>
  <% @groups.each do |group| %>
    <%= link_to group_path(group) do %>
      <%= render 'shared/groups', group: group %>
    <% end %>
  <% end %>
<% end %>
<%= link_to "Create Group", new_group_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>