    <%= javascript_importmap_tags %>
  </head>

  <body class="h-screen bg-gray-200">
    <p class="notice absolute text-white"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
