<%= link_to "<- Back", :back, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
<section>
<div class="flex justify-center p-5>
<h3>CREATE Operation</h3>
<div class="flex flex-col">
  <div class="w-full">
    <%= form_with model: @operation, url: group_operations_path, scope: :operation, html:{class: "bg-gray-200 w-screen"}, method: :post, data: {turbo: false} do |f| %>
      <div class="mb-2">
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'mt-3 shadow border-none appearance-none w-full py-5 px-5 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', id: "name", placeholder: "name" %>
      </div>
      <div class="mb-2">
        <%= f.number_field :amount, autofocus: true, autocomplete: "amount", class: 'mt-3 shadow border-none appearance-none w-full py-5 px-5 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', id: "amount", placeholder: "amount" %>
      </div>
      <div class="mb-2">
        <div>
        <%= f.label :groups, class: "flex flex-col" %>
          <%= f.collection_check_boxes(:group_ids, current_user.groups.order(created_at: :desc), :id, :name) %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Create Operation", class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
      </div>
    <% end %>
  </div>
</div>
</div>
</section>
